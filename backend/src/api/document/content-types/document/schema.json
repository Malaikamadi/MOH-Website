{
    "kind": "collectionType",
    "collectionName": "documents",
    "info": {
        "singularName": "document",
        "pluralName": "documents",
        "displayName": "Document",
        "description": "official documents, reports, and policies"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "Policy",
                "Report",
                "Guideline",
                "Form",
                "Strategic Plan",
                "Other"
            ],
            "default": "Other"
        },
        "files": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "files",
                "images",
                "videos",
                "audios"
            ]
        },
        "publishDate": {
            "type": "date"
        }
    }
}