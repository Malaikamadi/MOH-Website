{
    "kind": "collectionType",
    "collectionName": "events",
    "info": {
        "singularName": "event",
        "pluralName": "events",
        "displayName": "Event",
        "description": "Ministry events, conferences, and campaigns"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "description": {
            "type": "richtext"
        },
        "summary": {
            "type": "text",
            "maxLength": 300
        },
        "location": {
            "type": "string"
        },
        "eventStartDate": {
            "type": "datetime",
            "required": true
        },
        "eventEndDate": {
            "type": "datetime"
        },
        "coverImage": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        },
        "registrationLink": {
            "type": "string"
        },
        "organizer": {
            "type": "string"
        },
        "featured": {
            "type": "boolean",
            "default": false
        }
    }
}